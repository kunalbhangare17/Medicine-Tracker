<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_margin="15dp"
    android:layout_marginBottom="1dp"
    card_view:cardElevation="@dimen/_3sdp"
    card_view:cardUseCompatPadding="true"
    >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Date"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:id="@+id/tv_name"/>





    <TextView
        android:layout_marginTop="50dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Systolic:"
        android:id="@+id/camp"/>


    <TextView
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"

        android:layout_toRightOf="@+id/camp"
        android:text="name"/>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/place"
        android:text="Diastolic:"
        android:layout_below="@+id/camp"
        />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/sub"
        android:text="Sub Area"
        android:layout_below="@+id/name"
        android:layout_toRightOf="@+id/place"
        />


    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/place1"
        android:text="Glucose:"
        android:layout_below="@+id/place"
        />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/sub1"
        android:text="place"
        android:layout_below="@+id/sub"
        android:layout_toRightOf="@+id/place1"
        />



    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/place2"
        android:text="AIC:"
        android:layout_below="@+id/place1"
        />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/sub2"
        android:text="Date"
        android:layout_below="@+id/sub1"
        android:layout_toRightOf="@+id/place2"
        />


    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/place3"
        android:text="Total Cholestrol:"
        android:layout_below="@+id/place2"
        />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/sub3"
        android:text="Total Cholestrol"
        android:layout_below="@+id/sub2"
        android:layout_toRightOf="@+id/place3"
        />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/place4"
        android:text="BMI:"
        android:layout_below="@+id/sub3"
        />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Sub Area"
        android:id="@+id/sub4"
        android:layout_below="@+id/sub3"
        android:layout_toRightOf="@+id/place4"
        />



</RelativeLayout>
</android.support.v7.widget.CardView>